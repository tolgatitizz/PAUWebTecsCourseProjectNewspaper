@model Register
@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
    <meta name="generator" content="Hugo 0.79.0">
    <title>Signin Template · Bootstrap v5.0</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <link href="~/css/Signin.css" rel="stylesheet" />
    <link href="~/css/style.css" rel="stylesheet" />
</head>

<body class="text-center" style="width: 800px; ">

    <main class="form-signin form-signup">
        <form asp-controller="Home" asp-action="Register" method="POST">
            <div class="container" style="width: 800px; ">
                <h1>Register</h1>
                <p>Please fill in this form to create an account.</p>
                <hr>

                <label asp-for="UserMail"><b>Email</b></label>
                <input asp-for="UserMail" type="text" placeholder="Enter Email" name="UserMail" id="email">

                <label asp-for="UserName"><b>User Name</b></label>
                <input asp-for="UserName" type="text" placeholder="Enter UserName" name="UserName" id="email">

                <label asp-for="UserPassword"><b>Password</b></label>
                <input asp-for="UserPassword" type="password" placeholder="Enter Password" name="UserPassword" id="psw" required>

                <label asp-for="ReUserPassword"><b>Repeat Password</b></label>
                <input asp-for="ReUserPassword" type="password" placeholder="Repeat Password" name="ReUserPassword" id="psw-repeat" required>
                <hr>
                <p>By creating an account you agree to our <a href="#">Terms & Privacy</a>.</p>

                <button type="submit" class="registerbtn">Register</button>
            </div>

            <div class="container signin">
                <p>Already have an account? <a href="/sing-in.html">Sign in</a>.</p>
            </div>
        </form>
    </main>



</body>
</html>
