@model List<Haber>
@{
    ViewData["Title"] = "Details";
}

<div class="row">
    <div class="col-md-8" style="margin-top: 2%; ">
        <h3>@ViewBag.Selected.Baslik <span class="badge bg-primary">Okuduğunuz Haber</span></h3>
        <div id="CarouselCercevesi">
            <div id="carouselExampleControls" class="carousel slide " style="height: 84%; width: 84%;" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="data:image/jpeg;base64," class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="data:image/jpeg;base64," class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item">
                        <img src="data:image/jpeg;base64," class="d-block w-100" alt="...">
                    </div>
                </div>
                <a class="carousel-control-prev" style="height: 20%; background-color: rgba(0, 0, 0, 0.2); bottom: 0px;" href="#carouselExampleControls" role="button" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </a>
                <a class="carousel-control-next" style="height: 20%; background-color: rgba(0, 0, 0, 0.2); bottom: 0px;" href="#carouselExampleControls" role="button" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </a>
            </div>
        </div>
        <div class="yazarnotlari">
            
            <p>@ViewBag.Selected.Metin</p> 

            <div>
                <div class="row justify-content-start" style="width: 100%;">
                    <div class="col-md-8 col-lg-6">
                        <div class="contact-card-profile">
                            <img src="https://placeimg.com/125/125/people" style="width: 20%;height: 20%;border-radius: 5%;padding: 2%;" />
                            <div class="content" style="text-align: center;">
                                <h5>@ViewBag.Selected.Yazar</h5>
                                <p>Metin Yazarı</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>
    <div class="col-md-1"></div>


    <div class="col-md-3" style="margin-top: 2%;">
        <h4>Önerilen <span class="badge bg-primary" style="margin-top: 20px; margin-bottom:12px;">Haberler</span></h4>
        <div>
            @foreach (var item in Model)
            {

                <div class="card" style="width: 18rem;margin-top:2%">
                    <img src="https://www.kindpng.com/picc/m/377-3775778_mustafa-kemal-atatrk-n-imzas-hd-png-download.png" class="card-img-top" alt="...">
                    <div class="card-body">
                        <h5 class="card-title">@item.Baslik</h5>
                        <p class="card-text">@item.Metin</p>
                        <a asp-controller="Home" asp-action="Details" asp-route-id="@item.Id" class="stretched-link"></a>
                    </div>
                </div>

            }
        </div>
       

    </div>




</div>